---
groups:
  - name: InfluxDB rules
    rules:
      - alert: InfluxDBServiceInactive
        expr: 'node_systemd_unit_state{name="influxdb.service", state="inactive"} > 0'
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: 'InfluxDB service on {{ $labels.instance }} has been stopped'
          description: 'InfluxDB systemd service has been stopped for more than 1 minute.'
          node_stats_url: '{{ $externalLabels.grafana_url }}/d/rYdddlPWk/node-status?orgId=1&var-DS_PROMETHEUS=default&var-job=node-exporter&var-node={{ $labels.instance }}'

      - alert: InfluxDBEndpointInaccessable
        expr: 'up{job="influxdb"} == 0'
        for: 1m
        labels:
          severity: critical
        annotations:
          summary: 'InfluxDB HTTP endpoint cannot be accessed'
          description: 'Prometheus cannot access InfluxDB HTTP endpoint at {{ $labels.__address__ }} for more than 1 minute.'

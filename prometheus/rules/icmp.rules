---
groups:
  - name: ICMP rules
    rules:
      - alert: NodeNoPing
        expr: 'probe_success == 0'
        for: 2m
        labels:
          severity: critical
        annotations:
          summary: '{{ $labels.instance }} not reachable'
          description: 'IPv4 connectivity to {{ $labels.instance }} has been unavailable for more than 2 minutes.'
          node_stats_url: '{{ $externalLabels.grafana_url }}/d/rYdddlPWk/node-status?orgId=1&var-DS_PROMETHEUS=default&var-job=node-exporter&var-node={{ $labels.instance }}'
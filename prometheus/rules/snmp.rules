---
groups:
  - name: SNMP Rules
    rules:
      - alert: SwitchPortStatusDown
        expr: 'ifOperStatus{ifAlias!="ACCESS_PORT"} == 2 and ifAdminStatus{ifAlias!=""} == 1'
        for: 0s
        labels:
          severity: warning
        annotations:
          summary: 'Interface operational state change'
          description: 'Interface `{{ $labels.ifName }}` on `{{ $labels.instance }}` went down'

      - alert: SwitchPortHighBandwithUtilization
        expr: '((irate(ifHCInOctets{ifName!~".*CPU.*"}[2m])) / (ifHighSpeed * 10^6/8) * 100) > 90 <= 100 or ((irate(ifHCOutOctets{ifName!~".*CPU.*"}[2m])) / (ifHighSpeed * 10^6/8) * 100) > 90 <= 100'
        for: 30s
        labels:
          severity: warning
        annotations:
          summary: 'Interface has bandwidth utilization more than 90% for the last 30 seconds'
          description: 'Interface `{{ $labels.ifName }}` on `{{ $labels.instance }}` attached to `{{ $labels.ifAlias }}` is using {{ printf "%.0f" $value }}% of its bandwidth'

      - alert: UPSBatteryLow
        expr: 'upsBaseBatteryStatus{upsBaseBatteryStatus="batteryLow"} == 1'
        for: 30s
        labels:
          severity: critical
        annotations:
          summary: 'UPS battery is running low'
          description: 'UPS `{{ $labels.instance }}` at `{{ $labels.location }}` battery is running low'

      - alert: UPSBatteryCapacity
        expr: 'upsSmartBatteryCapacity < 80'
        for: 30s
        labels:
          severity: warning
        annotations:
          summary: 'UPS battery capacity is below 80%'
          description: 'UPS `{{ $labels.instance }}` at `{{ $labels.location }}` battery is at {{ $value }}% capacity'

      - alert: UPSBatteryCapacity
        expr: 'upsSmartBatteryCapacity < 50'
        for: 30s
        labels:
          severity: warning
        annotations:
          summary: 'UPS battery capacity is below 50%'
          description: 'UPS `{{ $labels.instance }}` at `{{ $labels.location }}` battery is at {{ $value }}% capacity'

      - alert: UPSBatteryRuntime
        expr: 'upsSmartBatteryRunTimeRemaining < 1800'
        for: 30s
        labels:
          severity: warning
        annotations:
          summary: 'UPS battery has less than 30 minutes of runtime'
          description: 'UPS `{{ $labels.instance }}` at `{{ $labels.location }}` battery has {{ $value }} seconds of runtime'

      - alert: UPSBatteryRuntime
        expr: 'upsSmartBatteryRunTimeRemaining < 600'
        for: 30s
        labels:
          severity: critical
        annotations:
          summary: 'UPS battery has less than 10 minutes of runtime'
          description: 'UPS `{{ $labels.instance }}` at `{{ $labels.location }}` battery has {{ $value }} seconds of runtime'

      - alert: UPSLowInputVoltage
        expr: 'round(upsSmartInputLineVoltage / 10) < 200'
        for: 30s
        labels:
          severity: critical
        annotations:
          summary: 'UPS input voltage is below 200V'
          description: 'UPS `{{ $labels.instance }}` at `{{ $labels.location }}` input voltage is {{ $value }}V'
